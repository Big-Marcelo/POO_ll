Exercício Desafio: Crie uma chamada para a API PokéAPI, você enviará o dado do nome e exibirá o resultado formatado no seu programa.

using System;
using System.Net.Http;
using System.Threading.Tasks;
using Newtonsoft.Json;

class Program
{
    static async Task Main()
    {
        Console.WriteLine("=== PokéAPI ===");
        Console.Write("Digite o nome do Pokémon: ");
        string nomePokemon = Console.ReadLine();

        await ConsultarPokemon(nomePokemon);
    }

    static async Task ConsultarPokemon(string nome)
    {
        string url = $"https://pokeapi.co/api/v2/pokemon/{nome.ToLower()}";

        using (HttpClient client = new HttpClient())
        {
            try
            {
                string json = await client.GetStringAsync(url);
                var pokemon = JsonConvert.DeserializeObject<Pokemon>(json);

                Console.WriteLine($"Nome: {pokemon.Name}");
                Console.WriteLine($"ID: {pokemon.Id}");
                Console.WriteLine($"Altura: {pokemon.Height / 10.0} metros");
                Console.WriteLine($"Peso: {pokemon.Weight / 10.0} kg");

                Console.WriteLine("\nHabilidades:");
                foreach (var habilidade in pokemon.Abilities)
                {
                    Console.WriteLine($"- {habilidade.Ability.Name}");
                }
            }
            catch (Exception e)
            {
                Console.WriteLine("Erro ao consultar o Pokémon: " + e.Message);
            }
        }
    }
}

public class Pokemon
{
    public int Id { get; set; }
    public string Name { get; set; }
    public int Height { get; set; }
    public int Weight { get; set; }
    public AbilitySlot[] Abilities { get; set; }
}

public class AbilitySlot
{
    public Ability Ability { get; set; }
}

public class Ability
{
    public string Name { get; set; }
}
